extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-bin.pug

block main
    -if (messages.success)
        .message.info
            div(
                class="alert alert-success"
                show-alert
                data-time="5000"
            ) #{messages.success}

    h1 Danh sách sản phẩm

    .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body.combo--button
        .row
            .col-6.button
                +filter-status(filterStatus)

            .col-3
                
                +search(keyword)

    .card.mb-3
    .card-body
        +form-bin()
        
        table(
            class = " table table-hover table-sm" 
            checkbox-multi 
        )
            thead 
                tr 
                    th 
                        input(type="checkbox" name="checkall")
                    th STT 
                    th Hình ảnh 
                    th Tiêu đề
                    th Giá
                    th Ngày xóa
                    th Trạng thái 
                    th Hành động
            tbody 
                each item, index in products
                    tr 
                        td 
                            input(
                                type="checkbox"
                                name="id"
                                value=item._id
                            )
                        td #{index+1}
                        td 
                            img(
                                src=item.thumbnail
                                alt="Iphone"
                                width="100px"
                                height="100px"
                            )
                        td #{item.title}
                        td $#{item.price}
                        td #{item.deleteDate}
                        td 
                            if (item.status == "active")
                                a(
                                    href="javascript:;"
                                    data-status=item.status
                                    data-id=item._id
                                    button-change-status 
                                    class="state state--active"

                                    ) Hoạt động
                            else
                                a(
                                    href="javascript:;"
                                    data-status=item.status
                                    data-id=item._id
                                    button-change-status 
                                    class="state state--stop"
                                    ) Dừng hoạt động
                        
                        td
                            .combo
                                button(
                                    class="state state--tem"
                                    button-restore
                                    data-id=item._id
                                ) Khôi phục
                                button(
                                    class="state state--stop"
                                    button-delete
                                    data-id=item._id
                                ) Xóa vĩnh viễn

        +pagination(pagination)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/products/change-status`
        )

        form(
            action=""
            method="POST"
            id="form-restore-item"
            data-path=`${prefixAdmin}/bin/restore`
        )

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/bin/delete`
        )

            

        script(src="/admin/js/bin.js")