mixin pagination(pagination)
    nav
        ul(class="pagination")
            li(class="page-item")
            button(
                class="page-link"
                button-pagination=(pagination.currentPage-1 > 0)?pagination.currentPage-1:1
                ) Trang trước
            
            - for (var i = 1; i <= pagination.totalPage; i++)
                li(class="page-item")
                button(class=`page-link ${pagination.currentPage == i?"active":""}` button-pagination=i) #{i}

            button(
                class="page-link"
                button-pagination=(pagination.currentPage+1 <= pagination.totalPage)? pagination.currentPage+1: pagination.totalPage
            ) Kế tiếp